<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.cakeshop.MainActivity">

    <!-- Cakes category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_cakes">
        <TextView
            android:id="@+id/cakes"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="Cakes" />
    </FrameLayout>

    <!-- Desserts category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_desserts">
        <TextView
            android:id="@+id/desserts"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="Desserts" />
    </FrameLayout>

    <!-- Coffee category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_coffee">
        <TextView
            android:id="@+id/coffee"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="Coffee" />
    </FrameLayout>

    <!-- Drinks category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_drinks">
        <TextView
            android:id="@+id/drinks"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="Drinks" />
    </FrameLayout>
</LinearLayout>
